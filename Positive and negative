import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
    while(true){
   int n=sc.nextInt();
      if(n>0){
           System.out.println("positive");
      }
      else if (n<0){
          System.out.println("negative"); 
      }
      else{
          System.out.println("zero"); 
      }
    }}
}


